<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/mediaqueries.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <title>ToDo List</title>
</head>

<body>

    <% if (message != "") {%>
        <%- include('./components/messages', {message: message, type: type})  %>
    <% } %>

    <header>

        <% if (task==null) { %>
            <%- include('./components/form', {titleForm: "To-Do List", action: "create", value: "", idBtn: "addButton", nameBtn: "Adicionar"})%>
        <% } else { %>
            <%- include('./components/form', {titleForm: "Editar Tarefa", action: `updateOne/${task._id}`, value: task.task, idBtn: "updateButton", nameBtn: "Atualizar"}) %>
        <% } %>

    </header>
<% if (tasksList.length > 0) { %>
    <section class="container">
        <ul>
            <% tasksList.forEach((task)=>{ %>
                <li class="check-<%= task.check %>">
                    <div>
                        <a id='checks' href="/check/<%= task._id %>" class="check-<%= task.check %>"><%= task.task %></a>
                        <span>Criado em <%= task.date.toLocaleDateString('pt-BR') %></span> 
                    </div>
                     
                    <div>
                        <a class="btnUpdate" href="/getById/<%= task._id %>/update"><i class="bi bi-pencil-square"></i></a>
                        <a class="btnDelete" href="/getById/<%= task._id %>/delete"><i class="bi bi-trash"></i></a>
                    </div>
                </li>
            <% }) %>
        </ul>
    </section>

    
    <% } else { %>
        
         <div class="notarefas">   
            <section class="social-tarefas">
            <i class="bi bi-journal-code"></i>
            </section>
            <h2>Não há tarefas !</h2>
        </div>
       
        <% } %>

    <% if (taskDelete !=null) { %>
        <%- include('./components/modalDel', {task: taskDelete})  %>
    <% } %>

    <footer>
       
        <div class="footersocial">
            <section class="social">
            <hr>
            <a href="https://github.com/ViitorAugusto" target="_blank"><i class="bi bi-github"></i></a>
            <a href="https://www.linkedin.com/in/viitoraugusto/" target="_blank"> <i class="bi bi-linkedin"></i></a>
            <a href="https://www.instagram.com/viitormattoss/" target="_blank"> <i class="bi bi-instagram"></i></a>
            <a href="https://www.facebook.com/vitor.augusto.5602728" target="_blank"> <i class="bi bi-facebook" ></i></a>
            <a href="https://wa.me/5511971351731" target="_blank"> <i class="bi bi-whatsapp"></i></a>
        </section>
        <div>
            Feito por Vitor Augusto De Mattos © 2022
        </div>
    </div>
        </footer>

            <script src="script.js"></script>
</body>

</html>